@page
@model TimeOffManager.Pages.ManageRequestsModel

<h2>Manage Time-Off Requests</h2>

@if (Model.LeaveRequests.Count == 0)
{
    <p>No pending time-off requests at the moment.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Leave Type</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.LeaveRequests)
            {
                <tr>
                    <td>@request.User.Name</td>
                    <td>@request.LeaveType</td>
                    <td>@request.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@request.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>@request.Status</td>
                    <td>
                        <form method="post">
                            <button type="submit" class="btn btn-success" formaction="?handler=Approve&requestId=@request.RequestId">Approve</button>
                            <button type="submit" class="btn btn-danger" formaction="?handler=Reject&requestId=@request.RequestId">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
